  <tr>
    <td><%= link_to v.title , v%></td>
    <td>
    <% if v.active%>
          Activada  
    <% else %>
          Desactivada
    <% end %>
    </td>

    <%if current_user%>
      <%if current_user.permit('Administrar Etiquetas')%>
        <td><%= link_to "Editar", edit_label_path(v) %></td>
      <%end%>
      <%if current_user.permit('Administrar Etiquetas')%>
        <td><%= link_to "Cambiar estado", v, method: :delete, :data => {:confirm => 'EstÃ¡ seguro?'}  %></td>
      <%end%>

    <%end%>
  </tr>
  <%end%>
  </tbody>
</table>
