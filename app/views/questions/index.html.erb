<h1>Listado de Preguntas</h1>
<br>

<table class="table">
<thead>
  <tr>
    <th>Titulo</th>
    <th>Cuerpo</th>
    <th>Usuario</th>
    <th>Fecha</th>
  </tr>
</thead>
  <% @listaQuestions.each do |v| %>
  <tbody>
  <tr>
    <td><%=v.title%></td>
    
    <td><%=v.body%></td>

    <td>Creada por el usuario :<%=v.user.id%></td>

    <td><%=v.created_at%></td>
  </tr>
  <%end%>
  </tbody>
</table>