<h1>Perfil de <%=@usuario.name%> <%=@usuario.lastname%></h1>
<br><br>


<table class="table">
<thead>
  <tr>
    <th>Nombre</th>
    <th>Apellido</th>
    <th>Universidad</th>
  </tr>
</thead>
  <tbody>
  <tr>
    <td><%=@usuario.name%></td>
    <td><%=@usuario.lastname%></td>
    <%if !(@usuario.university.nil?)%>
      <td><%=@usuario.university.name%></td>
    <%else%>  
      <td>Sin Universidad</td>
    <%end%>
  </tr>  
  </tbody>
</table>

<table class="table">
<thead>
  <tr>
    <th>Nivel</th>
    <th>Mis puntos</th>
  </tr>
</thead>
  <tbody>
  <tr>
    <td><%=@usuario.level.name%></td>
    <td><%=@usuario.points%></td>
  </tr>  
  </tbody>
</table>


<%if (@usuario.id == current_user.id)%>
  
<table class="table">
<thead>
  <tr>
    <th>E-mail</th>
    <th>Contraseña</th>
  </tr>
</thead>
  <tbody>
  <tr>
    <td><%=@usuario.email%></td>
    <td><%='XXXXXX'%></td>
  </tr>  
  </tbody>
</table>
<%end%>


<br>
<h4>PREGUNTAS realizadas por <%=@usuario.name%> <%=@usuario.lastname%>:</h4>
<br>

<table class="table table-hover table-bordered" style="border-width: 5px;border: solid; border-color:  #000000 ;">
<thead>
  <tr style="border-width: 5px;border: solid; border-color:  #000000 ;">
    <th style="border-width: 5px;border: solid; border-color:  #000000 ;">Titulo</th>
    <th style="border-width: 5px;border: solid; border-color:  #000000 ;">Cuerpo</th>
    <th style="border-width: 5px;border: solid; border-color:  #000000 ;">Fecha</th>
  </tr>
</thead>
  
  <tbody style="border-width: 5px;border: solid; border-color:  #000000 ;">
  
    <%= render :partial => "myQuestions", :collection => @myQuestions %>

 </tbody>
</table>



<br>
<h4>RESPUESTAS realizadas por <%=@usuario.name%> <%=@usuario.lastname%>:</h4>
<br>

<table class="table table-hover table-bordered" style="border-width: 5px;border: solid; border-color:  #000000 ;">
<thead>
  <tr style="border-width: 5px;border: solid; border-color:  #000000 ;">
    <th style="border-width: 5px;border: solid; border-color:  #000000 ;">Titulo de pregunta</th>
    <th style="border-width: 5px;border: solid; border-color:  #000000 ;">Cuerpo de respuesta</th>
    <th style="border-width: 5px;border: solid; border-color:  #000000 ;">Fecha</th>
  </tr>
</thead>
  
  <tbody style="border-width: 5px;border: solid; border-color:  #000000 ;">
  
    <%= render :partial => "myAnswers", :collection => @myAnswers %>

 </tbody>
</table>




<%if (@usuario.id == current_user.id)%>
    

<br>
<h4>Preguntas votadas por <%=@usuario.name%> <%=@usuario.lastname%>:</h4>
<br>

<table class="table table-hover table-bordered" style="border-width: 5px;border: solid; border-color:  #000000 ;">
<thead>
  <tr style="border-width: 5px;border: solid; border-color:  #000000 ;">
    <th style="border-width: 5px;border: solid; border-color:  #000000 ;">Titulo</th>
    <th style="border-width: 5px;border: solid; border-color:  #000000 ;">Cuerpo</th>
    <th style="border-width: 5px;border: solid; border-color:  #000000 ;">Voto</th>
  </tr>
</thead>
  
  <tbody style="border-width: 5px;border: solid; border-color:  #000000 ;">
  
    <%= render :partial => "myVotesQuestions", :collection => current_user.questionsvotes %>
  </tbody>
</table>


    
<br>
<h4>Mis acciones disponibles:</h4>
<br>

<table class="table table-hover table-bordered" style="border-width: 5px;border: solid; border-color:  #000000 ;">
<thead>
  <tr style="border-width: 5px;border: solid; border-color:  #000000 ;">
    <th style="border-width: 5px;border: solid; border-color:  #000000 ;">Mis acciones disponibles</th>
    <th style="border-width: 5px;border: solid; border-color:  #000000 ;">Puntos de acción</th>
  </tr>
</thead>
  
  <tbody style="border-width: 5px;border: solid; border-color:  #000000 ;">
    
    <%= render @usuario.level.actions %>

 </tbody>
</table>

  
<%end%>
